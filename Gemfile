source :rubygems

# Project requirements
gem 'rake'
gem 'rack-flash'
gem 'thin' # or mongrel

# Component requirements
gem 'sass', '~> 3.1.1'
gem 'compass', '~> 0.11.1'
gem 'nokogiri'
gem 'Thimblr', :require => false

group :development do
  gem 'shotgun'
  gem 'rb-fsevent'
  gem 'growl_notify'
  gem 'guard'
  gem 'guard-rspec'
  gem 'thor'
end

group :test do
  # Test requirements
  gem 'rspec'
  gem 'rack-test', :require => 'rack/test', :group => 'test'
end


gem 'sinatra', '~> 1.3.0'
gem 'sinatra-contrib'
